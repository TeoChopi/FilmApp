<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/newFilmsFragment">

    <fragment
        android:id="@+id/newFilmsFragment"
        android:name="com.openwebinars.filmapp.view.newfilms.NewFilmsFragment"
        android:label="NewFilmsFragment"
        tools:layout="@layout/fragment_new_films">

        <action
            android:id="@+id/action_NewFilmsFragment_to_DetailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@animator/nav_default_pop_enter_anim"
            app:exitAnim="@animator/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.openwebinars.filmapp.view.detail.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail" >

        <argument
            android:name="film"
            app:argType="com.openwebinars.filmapp.model.Film" />
    </fragment>
</navigation>